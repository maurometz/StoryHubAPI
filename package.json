{
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "mysql2": "^3.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22"
  },
  "name": "storyhub",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "repository": "https://github.com/maurometz/StoryHubAPI.git",
  "author": "Mauro Metz <maurometzdasilva@ienh.com.br>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "yarn migration:run && node dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "yarn typeorm migration:create",
    "migration:generate": "yarn typeorm migration:generate -d src/config/migrations.config.ts",
    "migration:run": "yarn typeorm migration:run -d src/config/migrations.config.ts",
    "migration:revert": "yarn typeorm migration:revert -d src/config/migrations.config.ts"
  }
}